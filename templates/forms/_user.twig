<form action="{{ site.url }}{{ formAction }}" method="POST" enctype="multipart/form-data" class="form-horizontal" role="form">
    {% if id is defined %}
        <input name="id" type="hidden" value="{{ id }}">
    {% endif %}
    <div class="form-group">
        <label for="form-user-email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input id="form-user-email" type="email" name="email" class="form-control" placeholder="you@domain.com" value="{{ email | default('') }}">
        </div>
    </div>
    {% if formAction == '/signup' %}
        <div class="form-group">
            <label for="form-user-password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input id="form-user-password" type="password" name="password" class="form-control" placeholder="Password, at least 5 characters">
            </div>
        </div>
        <div class="form-group">
            <label for="form-user-password2" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input id="form-user-password2" type="password" name="password2" class="form-control" placeholder="Password (confirm)">
            </div>
        </div>
    {% endif %}
    <div class="form-group">
        <label for="form-user-first-name" class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
            <input id="form-user-first-name" type="text" name="first_name" class="form-control" placeholder="First Name" value="{{ first_name | default('') }}">
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-last-name" class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
            <input id="form-user-last-name" type="text" name="last_name" class="form-control" placeholder="Last Name" value="{{ last_name | default('') }}">
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-company" class="col-sm-2 control-label">Company</label>
        <div class="col-sm-10">
            <input id="form-user-company" type="text" name="company" class="form-control" placeholder="Company" value="{{ company | default('') }}">
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-twitter" class="col-sm-2 control-label">Twitter</label>
        <div class="col-sm-10">
            <input id="form-user-twitter" type="text" name="twitter" class="form-control" placeholder="@twitter" value="{{ twitter | default('') }}">
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-bio" class="col-sm-2 control-label">Speaker Bio</label>
        <div class="col-sm-10">
            <textarea id="form-user-bio" name="speaker_bio" class="form-control" placeholder="Information About You" rows="5">{{ speaker_bio | default('') }}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-airport" class="col-sm-2 control-label">Departing Airport Code</label>
        <div class="col-sm-10">
            <input id="form-user-airport" type="text" name="airport" class="form-control" placeholder="3 Characters" value="{{ airport | default('') }}">
        </div>
    </div>
    <div class="form-group">
        <label for="form-transportation" class="col-sm-2 control-label">Airfare?</label>
        <div class="col-sm-10 checkbox">
            <input id="form-transportation" name="transportation" type="checkbox" value="1" class="checkbox" {% if transportation == '1' %}checked{% endif %} /> I need help with flight cost.
        </div>
    </div>
    <div class="form-group">
        <label for="form-hotel" class="col-sm-2 control-label">Hotel?</label>
        <div class="col-sm-10 checkbox">
            <input id="form-hotel" name="hotel" type="checkbox" value="1" class="checkbox" {% if hotel == '1' %}checked{% endif %} /> I need help with hotel cost.
        </div>
    </div>
    <div class="form-group">
        <label for="form-sponsor" class="col-sm-2 control-label">Company Sponsorship</label>
        <div class="col-sm-10 checkbox">
            <input id="form-sponsor" name="sponsor" type="checkbox" value="1" class="checkbox" {% if sponsor == '1' %}checked{% endif %} /> Is your company sponsoring, or would they like to?
        </div>
    </div>
    <div class="form-group">
        <label for="form-speaker-directory" class="col-sm-2 control-label">UTOS Speaker Directory?</label>
        <div class="col-sm-10 checkbox">
            <input id="form-speaker-directory" name="speaker_directory" type="checkbox" value="1" class="checkbox" {% if speaker_directory == '1' %}checked{% endif %} /> I would like my contact information to be shared with user group leaders, who may contact me to request that I speak at their group.
        </div>
    </div>
    <div class="form-group">
        <label for="form-request-mentor" class="col-sm-2 control-label">Request mentorship?</label>
        <div class="col-sm-10 checkbox">
            <input id="form-request-mentor" name="request_mentor" type="checkbox" value="1" class="checkbox" {% if request_mentor == '1' %}checked{% endif %} /> I would like a mentor to help me prepare my presentation(s). (Mentorship is subject to availability and scheduling constraints)
        </div>
    </div>
    <div class="form-group">
        <label for="form-max-presentations" class="col-sm-2 control-label">Max Presentations</label>
        <div class="col-sm-10">
            <select id="form-max-presentations" name="max_presentations">
                <option value="1" {% if max_presentations == '1' %}selected {% endif %}>I am willing to give 1 presentation</option>
                <option value="2" {% if max_presentations == '2' %}selected {% endif %}>I am willing to give up to 2 presentations</option>
                <option value="3" {% if max_presentations == '3' %}selected {% endif %}>I am willing to give up to 3 presentations</option>
                <option value="4" {% if max_presentations == '4' %}selected {% endif %}>I am willing to give up to 4 presentations</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-notes" class="col-sm-2 control-label">Additional Notes</label>
        <div class="col-sm-10">
            <p style="font-size: 90%; color: #606060;">Other information you feel the organizers should be aware of, such as any days you're not available</p>
            <textarea id="form-user-notes" name="speaker_info" class="form-control" rows="5">{{ speaker_info | default('') }}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="form-user-photo" class="col-sm-2 control-label">Photo</label>
        <div class="col-sm-10">
            <input type="file" id="form-user-photo" name="speaker_photo" class="form-control" placeholder="Photo at least 300px wide by 300px high" accept="image/jpg, image/jpeg, image/png">
            <p class="help-block">Photo should be square, and must be at least 300px wide by 300px high. JPG and PNG are the only accepted formats.</p>
            {% if preview_photo is defined and preview_photo is not empty %}
                <img src="{{ preview_photo }}" class="profile-photo">
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">{{ buttonInfo }}</button>
        </div>
    </div>
</form>
